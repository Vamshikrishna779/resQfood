<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_profile_image"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <!-- Edit Photo Button -->
    <Button
        android:id="@+id/buttonEditPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewFood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#74C43B"
        android:text="Add/Edit"
        android:textColor="@color/buttoncolor"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEditPhoto"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_border"
        android:hint="Email"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_border"
        android:hint="Name"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/hintColor" />
    <EditText
        android:id="@+id/editTextOrganization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_border"
        android:hint="Organization"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/hintColor" />
    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextOrganization"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_border"
        android:hint="Contact"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/hintColor" />

    <TextView
        android:id="@+id/textViewRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Role:"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRole"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/buttonback"
        android:text="Save"
        android:textColor="@color/buttoncolor"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</RelativeLayout>
